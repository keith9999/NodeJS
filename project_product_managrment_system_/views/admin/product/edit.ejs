<!--  views/admin/product/edit.ejs -->
<body>
    <!-- begin navbar header-->
    <%- include ../public/header.ejs%>
    <!-- end navbar header-->
    <!-- begin left side navbar -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include ../public/asideleft.ejs%>
            </div>
            <!-- begin -->
            <div class="col-sm-10">
                <ol class="breadcrumb">
                    <li class="active">
                        Product manage
                    </li>
                    <li class="active">
                        List of Product
                    </li>
                </ol>
                <div class="panel panel-default">
                    <div class="panel-heading">Edit Product</div>
                    <div class="panel-body">
                        <div class="table-responsive input-form">
                            <form action="/admin/product/doEdit" method="post" enctype="multipart/form-data">
                            <ul>
                                <input type="hidden" name="_id", value="<%=list._id%>">
                                <input type="hidden" name="pic", value="<%=list.pic%>">
                                <li>Product Name: <input type="text" name="title" value="<%=list.title%>"></li>
                                <li>Produtc Image: <input type="file" name="pic" ><img src="/<%=list.pic%>" width = "100" alt=""></li>
                                <li>Product Price: <input type="text" name="price" value="<%=list.price%>"></li>
                                <li>Product Fee: <input type="text" name="fee" value="<%=list.fee%>"></li>
                                <li>Product Description: <textarea name="description" id="" cols="60" rows="8" ><%=list.description%></textarea></li>
                                <li><br><button type="submit" class="btn btn-default">Submit</button></li>
                            </ul>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end begin -->
        </div>
    </div>
    <!-- end left side navbar -->
</body>

</html>